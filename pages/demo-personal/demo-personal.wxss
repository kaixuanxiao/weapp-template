/* pages/personal/personal.wxss */

.head-bg {
  position: absolute;
  width: 100%;
  height: 330rpx;
  z-index: -1;
}

.personal-info-box {
  padding: 48rpx 34rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: white;
}

.avatar {
  flex-shrink: 0;
  width: 106rpx;
  height: 106rpx;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0rpx 3rpx 10rpx rgba(0, 0, 0, 0.2);
}

.other-info {
  margin-left: 30rpx;
}

.other-info__name {
  width: 550rpx;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 40rpx;
  font-weight: 500;
  overflow: hidden;
}

.other-info__phone {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  opacity: 0.7;
}
