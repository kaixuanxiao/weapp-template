.c-primary, .c-green {
  color: #00cd96;
}
.c-blue {
  color: #4893ff;
}
.c-dark {
  color: #252525;
}

.bg-green {
 background: #00cd96;
}

page {
  background: #f7f8f9;
}
image {
  width: inherit;
  height: inherit;
}

.icon {
  width: 40rpx;
  height: 40rpx;
}

button::after {
  border: none;
}
.btn-plain {
  height: 80rpx;
  color: #00cd96;
  background: white;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 400;
  border: 1px solid #00cd96;
}
.btn-primary,
.btn-primary-row {
  height: 80rpx;
  color: white;
  background-color: #00cd96 !important;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 400;
}
.btn-primary-row {
  width: 622rpx;
  margin: 0 64rpx;
}
.btn-fixed-bottom {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 56rpx;
}
.btn__text {
  vertical-align: middle;
}
.btn__icon {
  vertical-align: middle;
  margin: 0 6rpx;
}

.text-trunc {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

button[disabled][type=primary] {
  background: #00CD96;
  opacity: .3;
}

.weui-navigation-bar__inner .weui-navigation-bar__left {
  margin-bottom: 4px;
}
.weui-navigation-bar__inner .weui-navigation-bar__center {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 6px;
  justify-content: left;
}
.nav-bar-left .weui-navigation-bar__inner .weui-navigation-bar__left {
  width: 54rpx !important;
}
.nav-bar-center .weui-navigation-bar__inner .weui-navigation-bar__center {
  justify-content: center;
}

.weui-navigation-bar__btn_goback {
  padding-right: 30rpx;
  mask-size: contain !important;
  -webkit-mask-size: contain !important;
  mask-position: left center !important;
  -webkit-mask-position: left center !important;
}